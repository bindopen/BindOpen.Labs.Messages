<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>BindOpen.Messages.Emails</AssemblyName>
    <PackageId>BindOpen.Messages.Emails</PackageId>
    <Product>BindOpen.Messages.Emails</Product>
    <Company>BindOpen</Company>
    <Copyright>Copyright ©BindOpen 2011-2023</Copyright>
    <Description>This package provides methods to easily deal with emails.</Description>
    <Authors>Sumer Team</Authors>
    <RootNamespace>BindOpen.Messages.Emails</RootNamespace>
    <PackageProjectUrl>https://github.com/bindopen/BindOpen.Messages.Emails</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bindopen/BindOpen.Messages.Emails.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>bindopen_icon.png</PackageIcon>
    <PackageIconUrl>https://storage.bindopen.org/org/icons/bindopen_icon_64x64.png</PackageIconUrl>
    <SignAssembly>true</SignAssembly>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
